<p id="notice"><%= notice %></p>



<style type="text/css">
  .jumbotron{
    margin-top: 20px;
    background-color: cadetblue ;
    background-size: auto;
  }
</style>
<div class="jumbotron">
  <h1 style="color: white; margin-left: 3%">
    <%= @project.title %>
  </h1>
</div>
<div class="container-fluid" style="margin-left: 0.5%">
  <div class="row">
    <div class="col-lg-3">
      <img ><%= image_tag @project.image.url(:thumb) %>
      <video width="64%" height="36%" controls>
        <source src="#" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    </div>
    <div class="col-lg-4">
      <h5 style="color: black; margin-left: 0.5%">
        Total Fund Collected <%= 45 %>
      </h5>
      <div class="progress" style="max-width: 50%">
        <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 70%;">
          <span class="sr-only">60% Complete</span>
        </div>
      </div>
      <h5>Total Fund Need: <%= @project.goal_amount %> USD.</h5>
      <h5>Days To Go: <%= @project.days_to_go %> Days</h5>
      <form class="form">
        <label for="usr">Amount to fund:</label>
        <input type="number" class="form-control" id="usr">
      </form>
    </div>
    <div class="col-lg-5">
      <p><a class="btn btn-primary btn-lg" href="#" role="button" style="color: white">Fund project</a></p>
      <p><a class="btn btn-success btn-lg" href="#" role="button" style="color: white">Get a Promise</a></p>
      <div class="btn btn-success btn-lg">Add to wishlist</div>
      <div class="btn btn-danger btn-lg"><%= link_to 'Back', projects_path %></div>
    </div>
  </div>
</div>

<div class="container" style="margin-left: 0.5%; margin-top: 15px; box-shadow: 5px 5px 2.5px grey">
    <strong style="font-size: large">Description:</strong>
  <p style="font-size: medium">
    <%= @project.description %>
  </p>
</div>






<%= link_to 'Edit', edit_project_path(@project) %> |

