


<style type="text/css">
  .jumbotron{
    margin-top: 20px;
    background-color: cadetblue ;
    background-size: auto;
  }
</style>
<div class="jumbotron">
  <h1 style="color: white; margin-left: 3%">
    <%= @project.title %>
  </h1>
</div>
<div class="container-fluid" style="margin-left: 0.5%">
  <div class="row">
    <div class="col-lg-4">
      <h5>Image</h5>
      <div class="row">
        <img ><%= image_tag @project.image.url(:thumb) %>

      </div>
      <h5>Video</h5>
      <div class="row">
        <video width="64%" height="36%" controls>
          <source src="#" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      </div>
    </div>
    <div class="col-lg-4">
      Total Fund Collected
        <div class="progressBarModal">
          <div class="progress">
            <div class="progress-bar progress-bar-striped active massive-font" role="progressbar" aria-valuenow="100" aria-valuemin="100" aria-valuemax="100" style="width:48%">
              48%
            </div>
          </div>
      </div>
      <h5>Total Fund Need: <%= @project.goal_amount %> USD.</h5>
      <h5>Days To Go: <%= @project.days_to_go %> Days</h5>
      <form class="form-inline" action="/action_page.php">
        <div class="form-group">
          <label for="usr">Amount to fund:</label>
          <input type="number" class="form-control" id="usr">
        </div>
      </form>
      <br>
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Promises
          <span class="caret"></span></button>
        <ul class="dropdown-menu">
          <li><a href="#">Promise 1</a></li>
          <li><a href="#">Promise 2</a></li>
          <li><a href="#">Promise 3</a></li>
        </ul>
      </div>
    </div>
    <div class="col-lg-4">
      <button type="button" class="btn btn-info btn-lg" id="myBtn">Fund</button>
      <!-- Modal -->
      <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title">Select your pay method</h4>
            </div>
            <div class="modal-body">
              <div class="checkbox">
                <label><input type="checkbox" value="">Master Card N°4568 7899 5648 5554</label>
              </div>
              <div class="checkbox">
                <label><input type="checkbox" value="">Visa N°4568 7899 5648 5554</label>
              </div>
              <div class="checkbox disabled">
                <label><input type="checkbox" value="" disabled>PayPal</label>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-success" data-dismiss="modal">Ok</button>
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>

        </div>
      </div>

    </div>

    <script>
        $(document).ready(function () {
            $("#myBtn").click(function () {
                $("#myModal").modal();
            });
        });
    </script>
      <p><a class="btn btn-success btn-lg" href="#" role="button" style="color: white">Get a Promise</a></p>
      <div class="btn btn-success btn-lg">Add to wishlist</div>
      <div class="btn btn-danger btn-lg" style="color: white;"><%= link_to 'Back', projects_path %></div>
    </div>
  </div>
</div>

<div class="container" style="margin-left: 0.5%; margin-top: 15px; box-shadow: 5px 5px 2.5px grey">
    <strong style="font-size: large">Description:</strong>
  <p style="font-size: medium">
    <%= @project.description %>
  </p>
</div>






