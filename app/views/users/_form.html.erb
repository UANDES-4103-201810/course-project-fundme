<%= form_for @user, html: {multipart:true }  do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-md-8">
    <%# if current_user.role != "admin"  %>
      <div class="form-group">
        <%= form.hidden_field :user_id, :value => @user.id, class: "form-control" %>
      </div>
    <%# end %>
    <div class="form-group">
      <%= form.label :name%>
      <%= form.file_field :name, id: :user_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, id: :user_last_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :role %>
      <%= form.text_field :role, id: :user_role, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, :id,:user_email, class: "form-control"  %>
    </div>
    <!--    <div class="field">-->
    <%#= form.label :category %>
    <%#= form.text_field :category, id: :project_category %>
    <!--    </div>-->

    <div class="form-group">
      <%= form.submit "Create User", class: "btn btn-success" %>
      <%= link_to 'Home', home_index_path,class: "btn btn-info" %>

    </div>

  </div>
<% end %>