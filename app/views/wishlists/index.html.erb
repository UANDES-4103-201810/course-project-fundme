<p id="notice"><%= notice %></p>

<div class="col-sm-2"></div>
<div class="col-md-6">
<h1>Wishlists</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%= @wishlistsprojects.count %>
    <% @wishlistsprojects.each do |wishlist| %>
      <tr>
        <td><br></td>
        <td> <%=wishlist.projects %>.-</td>
        <td  type="button" class="btn btn-success" style="color: white">  <%= link_to 'Show', wishlist %></td>
        <td  type="button" class="btn btn-success" style="color: white"><%= link_to 'Edit', edit_wishlist_path(wishlist) %></td>
        <td  type="button" class="btn btn-success" style="color: white" ><%= link_to 'Eliminate', wishlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<a type="button"  class="btn btn-primary" style="color: white" <%= link_to 'New Wishlist', new_wishlist_path %> </a>

</div>
