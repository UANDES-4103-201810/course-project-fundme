<p id="notice"><%= notice %></p>

<h1>Funds</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Pay Method Company</th>
      <th>Pay Method Expiration</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @funds.each do |fund| %>
      <tr>
        <td><%= Project.find(fund.project_id).title %></td>
        <td><%= PayMethod.find(fund.pay_method_id).company %></td>
        <td><%= PayMethod.find(fund.pay_method_id).expiration_date %></td>
        <td><%= fund.amount %></td>

        <td><%= link_to 'Show', fund %></td>
        <td><%= link_to 'Edit', edit_fund_path(fund) %></td>
        <td><%= link_to 'Destroy', fund, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

