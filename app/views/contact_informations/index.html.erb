<p id="notice"><%= notice %></p>

<h1>Contact Informations</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Phone number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contact_informations.each do |contact_information| %>
      <tr>
        <td><%= contact_information.address %></td>
        <td><%= contact_information.phone_number %></td>
        <td><%= link_to 'Show', contact_information %></td>
        <td><%= link_to 'Edit', edit_contact_information_path(contact_information) %></td>
        <td><%= link_to 'Destroy', contact_information, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact Information', new_contact_information_path %>
